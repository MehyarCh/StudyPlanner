// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Course {
  id            String          @id @default(cuid())
  name          String
  abbreviation  String?
  credits       Int
  semester      String
  instructor    String
  day           String
  time          String
  room          String
  status        CourseStatus    @default(ENROLLED)
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  documents     Document[]
  importantDates ImportantDate[]
}

model Document {
  id        String   @id @default(cuid())
  name      String
  type      DocumentType
  fileUrl   String
  courseId  String
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ImportantDate {
  id          String   @id @default(cuid())
  title       String
  date        DateTime
  type        DateType
  description String?
  courseId    String
  course      Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum DocumentType {
  LECTURE
  EXERCISE
  EXAM
  NOTES
}

enum DateType {
  ASSIGNMENT_DUE
  EXAM_DATE
  PROJECT_DUE
  OTHER
}

enum CourseStatus {
  ENROLLED
  PASSED
  FAILED
}
